{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "target": "ES6",
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./frontend/*"],
      "@/components/*": ["./frontend/components/*"],
      "@/lib/*": ["./frontend/lib/*"],
      "@/styles/*": ["./frontend/styles/*"],
      "@/app/*": ["./frontend/app/*"],
      "@/hooks/*": ["./frontend/hooks/*"],
      "@/public/*": ["./frontend/public/*"],
      "@/backend/*": ["./backend/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "frontend/**/*.ts",
    "frontend/**/*.tsx",
    "backend/**/*.ts",
    "backend/**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
